<% if @task.errors.any? %>
<div id="error_explanation" class="alert alert-danger col-md-offset-1 col-md-6 black-color">
  <h4><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h4>
  <ul>
    <% @task.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_for(@task, html:{class:'form-horizontal col-md-12'}) do |f| %>
  <div class="form-group">
    <%= f.label :description, class:'col-md-1 control-label' %>
    <div class="col-md-4">
      <%= f.text_field :description, class:'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Due Date", class:'col-md-1 control-label' %>
    <div class="col-md-4">
      <%= f.date_field :date, class:'form-control' %>
    </div>
  </div>
  <% if params[:action] == "edit" %>
    <div class="checkbox">
      <label class="col-md-4 col-md-offset-1">
        <%= f.check_box :complete %>
        Complete
      </label>
    </div>
  <% end %>
  <div class="actions col-md-offset-1">
    <%= f.submit class:'btn btn-primary' %>
    <%= link_to 'Cancel', tasks_path, class:'btn btn-default' %>
  </div>
<% end %>
