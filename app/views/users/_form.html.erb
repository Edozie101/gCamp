<% if @user.errors.any? %>
<div id="error_explanation" class="alert alert-danger col-md-offset-1 col-md-6 color-black">
  <h4><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h4>

  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<%= form_for(@user, html:{class:'form-horizontal col-md-12'}) do |f| %>
<div class="form-group">
  <%= f.label :first_name, class:'col-md-1 control-label' %>
  <div class="col-md-4">
    <%= f.text_field :first_name, class:'form-control' %>
  </div>
</div>
<div class="form-group">
  <%= f.label :last_name, class:'col-md-1 control-label' %>
  <div class="col-md-4">
    <%= f.text_field :last_name, class:'form-control' %>
  </div>
</div>
<div class="form-group">
  <%= f.label :email, class:'col-md-1 control-label' %>
  <div class="col-md-4">
    <%= f.email_field :email, class:'form-control' %>
  </div>
</div>
<div class="actions col-md-offset-1">
  <%= f.submit class:'btn btn-primary' %>
  <%= link_to 'Cancel', users_path, class:'btn btn-default' %>
</div>
<div class="well col-md-4 col-md-offset-1" style="position: inherit;">
  <%= link_to 'Delete User', @user, class:'btn btn-danger col-md-4 col-md-offset-4', title:'absolutely atrocious looking button well', method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
<% end %>e
