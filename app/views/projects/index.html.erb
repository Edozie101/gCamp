<% if notice %>
<div class="alert alert-success text-center"><%= notice %></div>
<% end %>

<div class="page-header">
  <div class="pull-right"><%= link_to 'New Project', new_project_path, class:'btn btn-primary' %></div>
  <h1>Projects</h1>
</div>
<table class="table">
  <thead>
    <th>Name</th>
    <!-- <th>Members</th> -->
    <th>Tasks</th>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
    <tr>
      <td><%= link_to project.name, project %></td>
      <td><%= link_to "#{project.tasks.size}", project_tasks_path(project) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
